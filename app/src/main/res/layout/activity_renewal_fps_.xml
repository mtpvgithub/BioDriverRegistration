<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.mtpv.info.bdv.biodriververification.update.RenewalFPS_Activity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:background="@color/colorAccent"
            android:src="@drawable/header_ver"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center|bottom"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/footer"
            android:scaleType="fitXY"
            android:gravity="center"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_below="@+id/header"
        android:layout_above="@+id/footer">

    <LinearLayout
        android:id="@+id/rewalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_txt"
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_ten"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Renewal Bio-Verification"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/margin_Thirty"
                android:textColor="@color/black"
                android:layout_weight="0.1"/>

            <ImageView
                android:id="@+id/scan_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/scan"
                android:layout_marginRight="10dp"
                android:layout_weight="0.9"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_20dp"
            android:padding="@dimen/margin_20dp"
            style="@style/edt_custom_style_registration">

        <LinearLayout
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_ten"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Hand            : "
                android:gravity="left"
                android:textSize="@dimen/margin_25dp"
                android:layout_marginRight="@dimen/margin_Sixteen"
                android:textColor="@color/black"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/txt_hand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/margin_25dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_ten"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Finger          :"
                android:gravity="left"
                android:textSize="@dimen/margin_25dp"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/margin_Eighteen"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/txt_finger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/margin_25dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_ten"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txt_moblie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please Enter OTP  :"
                    android:gravity="left"
                    android:textSize="@dimen/margin_25dp"
                    android:textColor="@color/black"
                    android:layout_weight="0.5"/>

                <EditText
                    android:id="@+id/ed_otp_xml"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:hint="Please Enter OTP"
                    android:textSize="@dimen/margin_20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:inputType="number"
                    android:gravity="center"
                    style="@style/edt_custom_style"
                    android:maxLength="4"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_20dp"
            android:padding="@dimen/margin_Forty">

            <Button
                android:id="@+id/img_fps_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please Capture Finger"
                android:background="@drawable/buttonstyle"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_20dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/verify_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verification FPS"
                android:background="@drawable/buttonstyle"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_20dp"/>


            <Button
                android:id="@+id/fin_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@drawable/buttonstyle"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_90dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/web_Pdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


    </LinearLayout>
    </ScrollView>

</RelativeLayout>
