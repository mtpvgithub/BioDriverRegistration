                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tvcareof_spotchallan_xml"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:text="Father Name"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:textStyle="normal" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1" >

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical" >


                                    <TextView
                                        android:id="@+id/tvdob_spotchallan_xml"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.45"
                                        android:text="DOB"
                                        android:textColor="#000000"
                                        android:textSize="20sp" />


                                    <TextView
                                        android:id="@+id/tvgender_spotchallan_xml"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.45"
                                        android:text="Gender"
                                        android:layout_marginTop="5dp"
                                        android:textColor="#000000"
                                        android:textSize="20sp" />

                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/qr_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="80dp"
                                    android:layout_weight="0.3"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/qr_code_edit" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvaddress_spotchallan_xml"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Address"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvmobilenumber_spotchallan_xml"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Mobile No."
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvuid_spotchallan_xml"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Aadhar No."
                        android:textColor="#ff0000"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <!-- AADHAAR_CARD_END -->

            <LinearLayout
                android:id="@+id/ll_otherDoc_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ll_style"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tvt_other"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:text="Address Proof Document:"
                    android:textColor="#ff0000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="0.9"/>

                <ImageView
                    android:id="@+id/imgv_oherdoc_spotchallan_xml"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:src="@drawable/empty_profile_img"
                    android:layout_weight="0.1"/>

            </LinearLayout>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_Forty"
                android:weightSum="1">

                <CheckBox
                    android:id="@+id/checkbox_text"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="I confirm that the information given in this form is true, complete and accurate."
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/margin_Sixteen"/>

                <!-- style="@style/dd_custom_check_box_style"
                android:background="#8aaec9"-->

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_Forty"
                android:weightSum="1">

                <Button
                    android:id="@+id/back_btn"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/buttonstyle"
                    android:text="@string/back"
                    android:textColor="#ffffff"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/next_btn"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/buttonstyle"
                    android:layout_marginRight="@dimen/margin_fifteen"
                    android:layout_marginLeft="@dimen/margin_fifteen"
                    android:text="@string/next"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </TableRow>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
